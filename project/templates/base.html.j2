<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ title | default("Librenotes") }}</title>
    <meta name="description" content="{{ description | default("We respect your privacy") }}">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block styles %}
        <link rel="stylesheet" href="{{ url_for('static', filename='css/bootstrap.min.css') }}">

    {% endblock %}
</head>
<body>
{% block navbar %}
    <nav class="navbar static-top navbar-light bg-white border-bottom box-shadow flex-column flex-md-row align-items-center p-3 px-md-4">
        <a class="navbar-brand" href="{{ url_for('app_index.index') }}">Librenotes</a>

        {% if current_user.is_authenticated %}
            {% if request.path == "/notes/"+current_user.username %}
                <form class="form-inline" style="text-align: center; display: block;">
                    <input class="form-control" id="myInput" onkeyup="myFunction()" placeholder="Search">
                </form>
            {% endif %}

            <ul class="nav justify-content-center">
                {% if request.path == "/" %}
                    <a class="p-2 text-dark" href="{{ url_for('app_notes.notes', username=current_user.username) }}">My Notes</a>
                {% endif %}
                <a class="p-2 text-dark" href="{{ url_for('app_account.change_pass_get') }}">Account</a>
                <a class="p-2 text-dark" href="{{ url_for('app_index.logout') }}">Logout</a>
            </ul>
            </nav>

        {% else %}
            <ul class="nav justify-content-center">
                <a class="p-2 text-dark" href="{{ url_for('app_login.login_get') }}">Login</a>
                <a class="p-2 text-dark" href="{{ url_for('app_register.register_get') }}">Register</a>
            </ul>
        {% endif %}
    </nav>

{% endblock %}
{% block content %}
{% endblock %}


{% block createmodal %}
{% endblock %}

{% block deletemodal %}
{% endblock %}

{% block editmodel %}
{% endblock %}

{% block scripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>
