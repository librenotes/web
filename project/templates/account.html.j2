{% extends "base.html.j2" %}
{% import "macro.html.j2" as messageflash %}

{% block styles %}
    {{ super() }}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/login.css') }}">
{% endblock %}

{% block content %}

    <form class="form-changepass" method="post" action="{{ url_for('app_account.change_pass_post') }}">
        <h1 class="h3 mb-3 font-weight-normal text-center">Login</h1>
        {{ messageflash.flash() }}
        {{ form.csrf_token }}
        <label for="inputCurrentPassword" class="sr-only">Password</label>
        {{ form.password(class_="form-control", placeholder="password") }}
        <label for="inputNewPassword" class="sr-only">New Password</label>
        {{ form.new_password(class_="form-control", placeholder="password") }}
        <label for="inputPassword" class="sr-only">Re New Password</label>
        {{ form.re_new_password(class_="form-control", placeholder="password") }}
        <button class="btn btn-lg btn-success btn-block" type="submit">Change Password</button>
    </form>
{% endblock %}
