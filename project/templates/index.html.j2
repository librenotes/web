    <!-- Start: Tickets -->
    <div class="container">
        <div class="container tickets" id="tickets">
            <h2 style="color: white; padding-top: 2em;" class="row-title">Donate</h2>
            <div class="row me-row content-ct">
                <div class="col-md-4 col-sm-6 offset-md-2">
                    <h3 style="color: white;">With Paypal</h3>
                    <a href="#" style="margin-bottom: 30px;" class="btn btn-lg btn-red">Donate</a>
                </div>
                <div class="col-md-4 col-sm-6">
                    <h3 style="color: white;">With BTC</h3>
